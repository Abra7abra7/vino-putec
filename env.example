# Vino Putec Environment Variables
# Skopírujte tento súbor ako .env.local a vyplňte skutočné hodnoty

# Newsletter (Mailchimp) - Voliteľné
MAILCHIMP_API_KEY=your_mailchimp_api_key_here
MAILCHIMP_AUDIENCE_ID=your_mailchimp_audience_id_here
MAILCHIMP_SERVER_PREFIX=us19

# Google reCAPTCHA v3 - Voliteľné
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here

# Email Notifications (Resend) - Voliteľné
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@vinoputec.sk

# Admin
ADMIN_EMAIL=brano.putec@gmail.com

# Payment (PayPal) - Voliteľné
PAYPAL_USE_SANDBOX=true
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# Payment (Stripe) - Voliteľné
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here
